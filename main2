# report.py
from flight_data import flights

def generate_report():
    try:
        flight_num = int(input("Enter flight number: "))
        
        # Check if the flight exists
        if flight_num not in flights:
            print("Flight not found.")
            return
        
        flight_info = flights[flight_num]
        seat_capacity = flight_info["Seat Capacity"]
        booked_seats = flight_info.get("Booked Seats", {})
        booked_count = len(booked_seats)
        available_count = seat_capacity - booked_count
        
        # Calculate revenue
        ticket_price = 200  # Price per seat
        revenue = booked_count * ticket_price
        
        print("Flight Report:")
        print(f"- Destination: {flight_info['Destination']}")
        print(f"- Total Seats: {seat_capacity}")
        print(f"- Booked Seats: {booked_count}")
        print(f"- Available Seats: {available_count}")
        print(f"- Revenue: ${revenue:.1f}")
    except ValueError:
        print("Invalid input. Please enter a numeric value for the flight number.")

if __name__ == "__main__":
    generate_report()
